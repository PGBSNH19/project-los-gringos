@page

@model VirtPub.Pages.PrivateTableModel


<head>
    <link rel="stylesheet" href="css/ChatModal.css" type="text/css" />
    <link rel="stylesheet" href="css/privateTable.css" type="text/css" />
    <script type="text/javascript">
        var Group = "@Model.Id.ToString()";
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>

<h1>Hi this is a private table</h1>

<div style="display: inline-flex">
    <h4 id="invite-link"></h4>
    <button id="inviteBtn">Copy invite link</button>
</div>
<div>
    <p>Games!</p>
    <ul>
        @foreach (var game in Model.Games)
        {
            <li><a href="@game.link">@game.name</a> </li>
        }
    </ul>

    <div id="UserListPartial">
    </div>
</div>

<script src="~/js/copyToClipboard.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/privateTable.js"></script>
<script src='https://kit.fontawesome.com/a076d05399.js'></script>


<partial name="_ChatModalPartial" />